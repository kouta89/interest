  <div class="container mt-5 mb-5">

  <div class="center-block">
    <h2 class="text-primary mb-4 font-weight-bold">パスワード再設定</h2>
  </div>

  <%= form_with(model: @customer, url: customer_path, method: :patch) do |f| %>
    <%= render "public/shared/error_messages", model: f.object %>

  <!-- ユーザーの詳細編集 -->
  <div class="pb-4">

    <!--新しいパスワード-->
    <div class="from-group pb-4">
      <h4 class="font-weight-bold"><%= f.label "新しいパスワード" %></h4>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>

    <!--新しいパスワード（確認用）-->
    <div class="from-group pb-4">
      <h4 class="font-weight-bold"><%= f.label "新しいパスワード（確認用）" %></h4>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
    </div>

    <div class="row">

      <div class="col-2 py-4"><%= f.submit "保存する", class: "btn btn-primary btn-sm mt-4" %></div>
    </div>

  </div>
  <% end %>

</div>

