<div class="container mt-5 mb-5">

  <div class="center-block">
    <h2 class="text-primary mb-4 font-weight-bold">おしゃべりるーむをはじめよう！</h2>
  </div>

  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <!--名前入力-->
    <div class="field center-block">
      <%= f.label :名前 %><br>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field center-block">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field center-block">
      <%= f.label :パスワードを入力 %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上～)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field center-block">
      <%= f.label :もう一度パスワードを入力（確認用） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div><br>

    <!--デフォルトのユーザー画像を用意する-->
    <%= hidden_field_tag :image, @customer.get_profile_image %>

    <div class="action center-block">
      <%= f.submit "登録", class:"btn btn-primary" %>
    </div>
  <% end %>

</div>
