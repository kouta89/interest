<% if customer_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
    <div class="d-flex align-items-center">
      <div class="col-md-6"><%= f.text_field :word,class: "form-control" ,placeholder: "Search" %></div>
      <div class="col-md-4"><%= f.select :range, options_for_select([['ユーザー名'], ['キーワード検索']]) %></div>
      <div class="col-md-2"><%= f.submit "検索", class: "btn btn-light" %></div>
    </div>
    <% end %>
  </div>
<% end %>