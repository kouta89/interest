<!DOCTYPE html>
<html>
  <head>
    <title>おしゃべりるーむ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダー-->
    <nav class="navbar navbar-dark bg-info p-3">
      <div class="d-flex col-12 col-md-3 col-lg-2 mb-2 mb-lg-0 flex-wrap flex-md-nowrap justify-content-between">

        <!--タイトルロゴ-->
        <a class="navbar-brand" href="/">
          おしゃべりるーむ
        </a>

        <!--アイコンを設定できる-->
        <!--<button class="navbar-toggler d-md-none collapsed mb-3" type="button" data-toggle="collapse" data-target="#sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">-->
        <!--  <span class="navbar-toggler-icon"></span>-->
        <!--</button>-->
      </div>

      <!--検索（実装していない）-->
      <div class="col-12 col-md-4 col-lg-2">
          <input class="form-control form-control-dark" type="text" placeholder="Search" aria-label="Search">
      </div>

      <div class="col-12 col-md-5 col-lg-8 d-flex align-items-center justify-content-md-end mt-3 mt-md-0">

        <div class="dropdown">
          <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
            Profile
          </button>

          <!--ユーザー関連の情報-->
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">

            <!--adminログイン時のヘッダー-->
            <% if admin_signed_in? %>

            <!--ログアウトする-->
            <li>
              <a class="dropdown-item">
                <%= link_to destroy_admin_session_path, method: :delete, :style=>"text-decoration: none; color: #000;" do %>ログアウト<% end %>
              </a>
            </li>

            <!--customerログイン時のヘッダー-->
            <% elsif customer_signed_in? %>

            <!--プロフィールに遷移-->
            <li>
              <a class="dropdown-item">
                <%= link_to  customer_path(current_customer), :style=>"text-decoration: none; color: #000;" do %>プロフィール<% end %>
              </a>
            </li>

            <!--ログアウトする-->
            <li>
              <a class="dropdown-item">
                <%= link_to destroy_customer_session_path, method: :delete, :style=>"text-decoration: none; color: #000;" do %>ログアウト<% end %>
              </a>
            </li>

            <!--退会する-->
            <li>
              <a class="dropdown-item">
                <%= link_to unsubscribe_path(current_customer), :style=>"text-decoration: none; color: #F00;" do %>退会<% end %>
              </a>
            </li>

            <!--ゲストログイン時のヘッダー-->
            <% else %>

            <!--ログイン画面に遷移-->
            <li>
              <a class="dropdown-item link-str">
                <%= link_to  new_customer_session_path, :style=>"text-decoration: none; color: #000;" do%>
                  ログイン
                <% end %>
              </a>
            </li>

            <!--新規登録画面に遷移-->
            <li>
              <a class="dropdown-item">
                <%= link_to new_customer_registration_path, data: {"turbolinks" => false}, :style=>"text-decoration: none; color: #000;" do %>新規登録<% end %>
              </a>
            </li>

            <!--管理者ログイン画面に遷移-->
            <li>
              <a class="dropdown-item">
                <%= link_to  new_admin_session_path, :style=>"text-decoration: none; color: #000;" do%>管理者ログイン<% end %>
              </a>
            </li>

            <% end %>

          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">

        <!--サイドバー-->
        <div class="border col-md-3 bg-light">
          <div class="position-sticky pt-md-5">
            <ul class="nav flex-column">

              <!--adminログイン時のヘッダー-->
              <% if admin_signed_in? %>

              <!--ホーム画面に遷移-->
              <li class="nav-item">
                <a class="nav-link active" aria-current="page">
                  <%= link_to root_path do %>
                    <i class="fas fa-home fa-2x"></i><span class="mx-2">ホーム</span>
                  <% end %>
                </a>
              </li>

              <!--ユーザー一覧に遷移-->
              <li class="nav-item">
                <a class="nav-link active" aria-current="page">
                  <%= link_to admin_customers_path do %>
                    <i class="fas fa-user fa-2x"></i><span class="mx-2">会員一覧</span>
                  <% end %>
                </a>
              </li>

              <!--customerログイン時のヘッダー-->
              <% elsif customer_signed_in? %>

              <!--ホーム画面に遷移-->
              <li class="nav-item">
                <a class="nav-link active" aria-current="page">
                  <%= link_to root_path do %>
                    <i class="fas fa-home fa-2x"></i><span class="mx-2">ホーム</span>
                  <% end %>
                </a>
              </li>

              <!--ユーザー一覧情報のページに遷移-->
              <li class="nav-item">
                <a class="nav-link">
                  <%= link_to customers_path do %>
                    <i class="fas fa-users fa-2x"></i><span class="mx-2">ユーザーいち</span>
                  <% end %>
                </a>
              </li>

              <!--フォロー関連情報のページに遷移-->
              <li class="nav-item">
                <a class="nav-link">
                  <%= link_to root_path do %>
                    <i class="fas fa-users fa-2x"></i><span class="mx-2">フォロー</span>
                  <% end %>
                </a>
              </li>

              <li class="nav-item">
                <a class="nav-link">
                  <%= link_to  new_like_path do %>
                    <i class="fas fa-star fa-2x"></i></i><span class="mx-2">趣味を投稿</span>
                  <% end %>
                </a>
              </li>

              <!--ゲストログイン時のヘッダー-->
              <% else %>

              <!--ホーム画面に遷移-->
              <li class="nav-item">
                <a class="nav-link active" aria-current="page">
                  <%= link_to root_path do %>
                    <i class="fas fa-home fa-2x"></i>ホーム
                  <% end %>
                </a>
              </li>

              <!--ホーム画面に遷移-->
              <li class="nav-item">
                <a class="nav-link active" aria-current="page">

                  <%= link_to root_path do %>
                    <i class="fas fa-home fa-2x"></i>ホーム
                  <% end %>
                </a>
              </li>

              <% end %>

            </ul>
          </div>
        </div>

        <div class="col-md-9">
          <div class="row">
          <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
